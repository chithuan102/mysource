@model IEnumerable<MVC.Models.Major>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Major Management</h2>
<hr />
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<a class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("Create","Majors")"><i class="fa fa-plus"></i> Add New</a>
<table id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.majorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.majorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.majorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.majorName)
                </td>
                <td width="300">
                    @Html.ActionLink("Edit", "Edit", new { id = item.majorId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Details", "Details", new { id = item.majorId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.majorId }, new { onclick = "return confirm('Are you sure you wish to delete this record?')", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

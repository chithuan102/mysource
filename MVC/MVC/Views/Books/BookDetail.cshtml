@model MVC.Models.Book_Out_on_loan
@{
    ViewBag.Title = "BookDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{ 
    MVC.Models.Book books = ViewData["BookDetails"] as MVC.Models.Book;
}

<div class="row">

    <div id="HinhAnh">
        <img src="@Url.Content(books.Image)" />

    </div>
    <div id="ThongTin">
        <div id="TenSach">@books.Title</div>
        <div>Author: @books.Author</div>
        <div id="ChuDe">Category: @ViewBag.Category</div>
        <div id="Mota">Description:<br />- @books.Description <br /></div>
        @*Dịch dấu chấm động đơn giá sử dụng string.Format("{0:0,0}", tham số)*@
        <div id="Gia"><span style="color: green; font-weight: normal;">Price for rent:</span><span id="Gia"> @string.Format("{0:0,0}", @books.Price) $</span></div>
        <br />
        <a class="btn btn-success" style="margin-bottom:10px" id="showhidetrigger"><i class="fa fa-plus"></i> Book</a>
     
    </div>

</div>
